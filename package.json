{
  "name": "double-docker",
  "description": "Building NPM docker image in stages for faster NPM installs",
  "version": "0.0.0-semantic-release",
  "main": "",
  "bin": {
    "dd-build": "./install-and-build.sh",
    "dd-test": "./install-and-test.sh",
    "dd-rm": "./utils/rm-docker-images.sh",
    "dd-get": "./get-built.sh"
  },
  "files": [
    "docker-files",
    "*.sh",
    "utils"
  ],
  "scripts": {
    "test": "echo \"Hi there\"",
    "issues": "git-issues",
