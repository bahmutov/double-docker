  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/double-docker/issues"
  },
  "homepage": "https://github.com/bahmutov/double-docker#readme",
  "devDependencies": {
    "git-issues": "1.2.0",
    "pre-git": "3.8.4",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [],
      "pre-push": [],
      "post-commit": [],
      "post-checkout": [],
      "post-merge": []
    }
  }
